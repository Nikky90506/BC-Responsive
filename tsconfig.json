{
  "include": [
    "node_modules/bc-stubs/bc/**/*.d.ts",
    ".types/*.d.ts",
    "**/*.js",
    "**/*.ts",
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "removeComments": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}